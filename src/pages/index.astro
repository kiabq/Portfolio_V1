---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header.astro";
import Main from "../components/main.astro";
import Footer from "../components/footer.astro";
import Project from "../components/project.astro";
import Gameoflife from "../components/gameoflife.astro";

import React from "../images/svgs/react.svg?raw";
import Postgres from "../images/svgs/postgres.svg?raw";
import Python from "../images/svgs/python.svg?raw";
import TypeScript from "../images/svgs/typescript.svg?raw";
import Node from "../images/svgs/node.svg?raw";
import AstroIcon from "../images/svgs/astro.svg?raw";

import "/public/css/game.css";
---

<Layout title="home">
	<Header />
	<Main>
		<div class="body-content">
			<div class="body-intro">
				<div class="body-intro-main">
					<p class="body-summary">
						Welcome! I'm Joseph. I enjoy doing web stuff and
						messing around on browsers. I'm currently a student majoring in Computer Science.
					</p>
					<p class="body-summary">
						I'm interested in all things software from compilers and browsers to web development. I'm currently learning C++ and Data Structures and Algorithms in my own time.
					</p>
					<p class="body-summary">
						In my time away from computers, I enjoy film photography, vintage cars, calisthenics, and reading. 
					</p>
				</div>
			</div>
			<div class="body-info">
				<h3 class="body-info-header">Projects</h3>
				<div class="body-projects">
					<Gameoflife />
					<div class="body-projects-list">
						<Project
							title="Minesweeper"
							description="This is a simple recreation of the game built using React and TypeScript."
							source="https://github.com/kiabq/minesweeper-clone"
							link="https://minesweeper98.netlify.app/"
						>
							<!-- Project Technology Icons -->
							<Fragment set:html={TypeScript} />
							<Fragment set:html={React} />
						</Project>
						<Project
							title="Minispot"
							description="A Small API built in Python using FastAPI which fetches Spotify account data."
							source="https://github.com/kiabq/minispot"
							link="https://github.com/kiabq/minispot"
						>
							<!-- Project Technology Icons -->		
							<Fragment set:html={Python} />
						</Project>
						<Project
							title="HyperSlice"
							description="A Link shortener built using Astro, Koa, and SQL."
							source="https://github.com/kiabq/hyperslice"
							link="https://link.cnwy.dev"
						>
							<!-- Project Technology Icons -->
							<Fragment set:html={AstroIcon} />
							<Fragment set:html={TypeScript} />
							<Fragment set:html={Node} />
							<Fragment set:html={Postgres} />
						</Project>
					</div>
				</div>
			</div>
		</div>
	</Main>
	<Footer />
</Layout>
