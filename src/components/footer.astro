---
import LinkedIn from "../images/svgs/linkedin.svg?raw";
import Github from "../images/svgs/github.svg?raw";
import DarkSubway from "../images/svgs/dark-subway.svg";
import LightSubway from "../images/svgs/light-subway.svg";
---

<div class="footer-subway-wrapper">
    <div class="footer-subway-tunnel"></div>
    <div class="footer-subway">
        <img data-train="dark" class="footer-subway-car" alt="Subway Car Art" src={DarkSubway.src} width={DarkSubway.width} height={DarkSubway.height} />        
        <img data-train="light" class="footer-subway-car" alt="Subway Car Art" src={LightSubway.src} width={LightSubway.width} height={LightSubway.height} />
    </div>
</div>
<footer class="footer pdtb-1rem">
    <div class="footer-spotify">
        <img alt="Album image for 'currently listening to' song" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" class="footer-spotify-album"/>
        <div class="spotify-info-wrapper">
            <div class="dark-gradient"></div>
            <div class="light-gradient"></div>
            <div class="footer-spotify-info">
                <div id="currentSong">nothing playing</div>
                <div id="currentArtist">at the moment</div>    
            </div>
        </div>
    </div>
    <div class="footer-socials">
        <a href="https://www.linkedin.com/in/joseph-e-conway/" target="_blank" rel="noreferrer noopener" class="footer-img">
            <Fragment set:html={LinkedIn} />
        </a>
        <a href="https://github.com/kiabq" target="_blank" rel="noreferrer noopener" class="footer-img">
            <Fragment set:html={Github} />
        </a>
    </div>
</footer>