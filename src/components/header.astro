<script>
    let initTheme = getTheme();
    let globalTheme = document.querySelector(".content-container");
    let theme = document.querySelector(".nav-theme");
    let themeToggle = document.querySelector(".nav-theme-toggle");

    function getTheme() {
        let currentTheme = localStorage.getItem("theme");

        if (currentTheme === null) {
            return "light";
        } else {
            return currentTheme;
        }
    }
    
    if (globalTheme !== null && themeToggle !== null && theme !== null) {
        let gT = globalTheme;
        let toggle = themeToggle;

        function setThemeId() {
            if (getTheme() === "dark") {
                gT.classList.add("dark-theme");
                gT.classList.remove("light-theme");
            } else {
                gT.classList.add("light-theme");
                gT.classList.remove("dark-theme");
            }
            
            toggle.id = getTheme();
        }

        function setTheme(param: string) {
            localStorage.setItem("theme", param);
        
            setThemeId();
        }

        function handleWindowLoad() {
            if (initTheme === null || (initTheme !== "light" && initTheme !== "dark")) {
                localStorage.setItem("theme", "light");
            }

            setThemeId();
        }

        function handleThemeChange() {
            if (localStorage.getItem("theme") === "dark") {
                setTheme("light");
            } else {
                setTheme("dark");
            }
        }

        window.addEventListener("load", handleWindowLoad);
        theme.addEventListener("click", handleThemeChange);
    }
</script>

